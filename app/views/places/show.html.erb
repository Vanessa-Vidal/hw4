<% if @current_user %>

  <h1><%= @place["name"] %></h1>

  <p>
  <a class="btn btn-primary" href="/posts/new?place_id= <%=@place["id"]%>" role="button">New Post</a>
  </p>

  <h3>My Posts</h3>

  <div class="col-md-3 col-sm-6">

  <% for post in @posts %>
    <h3><%= post["title"] %></h3>
    <h5><%= post["posted_on"] %></h4>
    <p><%= post["description"] %></p>
  <% end %>

  </div>
  <p>
    <a href="/places">Back to All Places</a>
  </p>

<% end %>
